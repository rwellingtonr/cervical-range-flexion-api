{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["ESNext"],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "removeComments": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@app/*": ["./src/app/*"],
            "@config/*": ["./src/config/*"],
            "@database/*": ["./src/database/*"],
            "@entities/*": ["./src/entities/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@middleware/*": ["./src/middleware/*"],
            "@modules/*": ["./src/modules/*"],
            "@router/*": ["./src/router/*"],
            "@repositories/*": ["./src/repositories/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts"]
}
